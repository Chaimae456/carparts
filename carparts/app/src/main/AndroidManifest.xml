<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.carpartsalpha">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launchercarparts"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launchercarparts_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Carpartsalpha">
        <activity
            android:name=".activities.LoginActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/no_action_bar_style"/>
        <activity
            android:name=".activities.SplashScreen"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/no_action_bar_style">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.MainActivity"
            android:exported="false" />
    </application>

</manifest>